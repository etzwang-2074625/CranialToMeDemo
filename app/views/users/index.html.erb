<%= form_tag users_path, method: :get, remote: true, class: "form-inline", id:"search-form" do %>
  <div class = "container-fluid panel-padding">
    <div class="d-inline-flex flex-row horizontal-search-form">
    <%= text_field_tag "search_field", "", placeholder: "Search by user name", class: "form-control", autocomplete: 'off', aria:{label:'Search by user name'} %>
    <%= select_tag 'role_id', options_for_select([["-All Roles-", 'all']] + Role.all.order('name').collect{|item| [item.name, item.id]}), class: 'form-control', aria:{label:'Search by Role'} %>
    <button class="btn btn-primary" type="submit" id="submit_location" name="submit_location" style='width:300px'><i class="fa fa-search"></i> Search</button>  
    <%= link_to '<i class="fa fa-plus"></i> Create User'.html_safe, new_user_path, class: 'btn btn-primary',style:'width:300px' if current_user.admin?%>
    

  </div>
<% end %>

  <div class = "mt-3" id="user_search">
    <%= render :partial => "users/search" %>
  </div>
            
