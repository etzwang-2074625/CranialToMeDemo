<%= form_with(model: epilepsy, local: true) do |form| %>
  <% if epilepsy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(epilepsy.errors.count, "error") %> prevented this patient from being saved:</h2>
      <ul>
        <% epilepsy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
